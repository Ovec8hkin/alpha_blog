<section class="jumbotron text-center">
  <%= gravatar_for @user, size: 100, classes: 'img-circle' %>
  <h1><%= @user.username %></h1>
  <br /><br />
  <p><%= link_to 'Edit Account', edit_user_path(@user), class: 'btn btn-primary' %> | <%= link_to 'Delete Account', user_path(@user), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-danger' %></p>
</section>

<section class="container-fluid">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <p id="bio"><%= @user.bio %></p>
    </div>
  </div>

  <h2 class="col-sm-10 col-sm-offset-1 text-center" id="user-article-heading">Articles</h2>

  <%= render 'shared/article', obj: @user_articles %>

  <div class="col-sm-6 col-sm-offset-3 text-center">
    <%= will_paginate @user_articles %>
  </div>

</section>