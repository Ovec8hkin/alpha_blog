<section class="jumbotron text-center">
  <h1>Sign Up now!</h1>
  <h3>Create an account with Alpha Blog and post new articles!</h3>
</section>

<section class="container-fluid">

  <%= render 'shared/errors', obj: @user %>

  <div class="row">
    <div class="col-xs-12">

      <%= form_for(@user, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>

          <div class="form-group">
            <div class="control-label col-sm-2 col-sm-offset-1">
              <%= f.label :username %>
            </div>
            <div class="col-sm-6">
              <%= f.text_field :username, class: 'form-control clearfix', placeholder: "Username", autofocus: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2 col-sm-offset-1">
              <%= f.label :email %>
            </div>
            <div class="col-sm-6">
              <%= f.email_field :email, class: 'form-control clearfix', placeholder: "Email" %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2  col-sm-offset-1">
              <%= f.label :password %>
            </div>
            <div class="col-sm-6">
              <%= f.password_field :password, class: 'form-control clearfix', placeholder: 'Password' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-10 ">
              <%= f.submit "Sign Up", class: 'btn btn-primary'%>
              <%= link_to "Cancel", articles_path, class: 'btn btn-default' %>
            </div>
          </div>

      <% end %>

    </div>
  </div>
</section>