<%= render 'shared/errors', obj: @article %>


<div class="row">
  <div class="col-xs-12">

    <%= form_for(@article, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :title %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :title, class: 'form-control clearfix', placeholder: "Article title", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :description %>
          </div>
          <div class="col-sm-10">
            <%= f.text_area :description, class: 'form-control clearfix', rows: 10, placeholder: "Article text" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: 'btn btn-primary'%>
            <%= link_to "Cancel", articles_path, class: 'btn btn-default' %>

            <% if show_delete %>
              <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-danger' %>
            <% end %>


          </div>
        </div>

    <% end %>

  </div>
</div>